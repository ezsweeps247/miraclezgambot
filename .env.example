# Database Configuration (Neon)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Server Configuration
NODE_ENV=production
PORT=5000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
WEBHOOK_URL=https://your-railway-app.railway.app
WEBAPP_URL=https://your-railway-app.railway.app

# NOWPayments Configuration
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret
NOWPAYMENTS_SANDBOX=false

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Domain Configuration
REPLIT_DOMAINS=your-railway-app.railway.app

# Casino Configuration
HOUSE_EDGE_DICE=0.01
HOUSE_EDGE_SLOTS=0.03
HOUSE_EDGE_CRASH=0.01
SERVER_SEED_ROTATION_DAYS=1

# Admin Configuration (Optional)
ADMIN_USER_ID=123456789
ADMIN_EMAIL=admin@example.com
